<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/notification_caller_name"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amiko"
        android:textColor="@color/lgv_back_color"
        android:textSize="13sp"
        android:textStyle="bold"
        tools:text="Caller name" />

    <TextView
        android:id="@+id/notification_recipient"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_caller_name"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:alpha="0.8"
        android:fontFamily="@font/amiko"
        android:textSize="11sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:text="SomeOne" />

    <TextView
        android:id="@+id/notification_Bnumber"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_caller_name"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/notification_recipient"
        android:alpha="0.8"
        android:fontFamily="@font/amiko"
        android:textSize="6sp"
        android:visibility="visible"
        tools:text="#345678" />


    <TextView
        android:id="@+id/notification_call_status"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_time"
        android:layout_alignStart="@+id/notification_time"
        android:layout_alignEnd="@+id/notification_time"
        android:alpha="0.8"
        android:fontFamily="@font/amiko"
        android:textAlignment="center"
        android:textSize="9sp"
        tools:text="123 456 789" />

    <ImageView
        android:id="@+id/notification_work"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_above="@+id/notification_Bnumber"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/notification_caller_name"
        android:src="@drawable/ic_office"
        android:visibility="visible"
        app:tint="@color/green" />

    <ImageView
        android:id="@+id/notification_home"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignBottom="@+id/notification_work"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/notification_work"
        android:src="@drawable/ic_homepage"
        android:visibility="visible"
        app:tint="@color/blue" />

    <ImageView
        android:id="@+id/notification_phone"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignBottom="@+id/notification_home"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/notification_home"
        android:src="@drawable/ic_mobile_phone"
        android:visibility="visible" />


    <TextView

        android:id="@+id/notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/notification_actions_holder"
        android:layout_toEndOf="@+id/notification_phone"
        android:fontFamily="sans-serif-condensed-medium"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/notification_actions_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notification_decline_call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_phone_hangup"
            android:tint="@color/red" />

        <ImageView
            android:id="@+id/notification_accept_call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/calls"
            android:tint="@color/green"
            android:visibility="visible" />

    </LinearLayout>
</RelativeLayout>
