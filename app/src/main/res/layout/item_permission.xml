<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="@dimen/twelve_dp"
    android:layout_marginTop="@dimen/twelve_dp"
    android:layout_marginRight="@dimen/twelve_dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/permission_icon"
        android:layout_width="@dimen/thirty_dp"
        android:layout_height="@dimen/thirty_dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_phone" />

    <TextView
        android:id="@+id/permission_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:visibility="gone"
        android:text="@string/permission"
        android:textColor="@color/textPrimary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/permission_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:text="@string/perm_required"
        android:textColor="@color/textSecondary"
        android:textSize="12sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/permission_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:paddingRight="8dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:text="@string/enable"
        android:textSize="12sp"
      />
</LinearLayout>
