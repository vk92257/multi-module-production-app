<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fefefe"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_fail_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/twenty_dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_vehicle_icon"
                    android:layout_width="220dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/twenty_dp"
                    android:layout_marginTop="@dimen/twenty_five_dp" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twenty_sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/amiko" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eighty_dp"
                    android:gravity="center|top"
                    android:padding="@dimen/fifteen_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen_sp"
                    app:fontFamily="@font/amiko" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_fault"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/seventy_five_dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/twenty_dp"
                        android:layout_marginEnd="@dimen/twenty_dp"
                        android:backgroundTint="@color/bjs"
                        android:gravity="center"
                        android:padding="@dimen/twelve_dp"
                        android:text="@string/add_fault"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/eighteen_sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:fontFamily="@font/amiko"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/white"
                        app:shapeAppearanceOverlay="@style/buttonShape" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_no"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/seventy_five_dp"
                        android:layout_marginStart="-100dp"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/red"
                        android:gravity="end|center_vertical"
                        android:paddingEnd="50dp"
                        android:text="@string/no"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/amiko"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/white"
                        app:shapeAppearanceOverlay="@style/buttonShape" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_yes"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:layout_marginEnd="-100dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/green"
                        android:gravity="center|start"
                        android:paddingStart="50dp"
                        android:text="@string/yes"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/amiko"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/white"
                        app:shapeAppearanceOverlay="@style/buttonShape" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_faults_logs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_faults"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/twenty_dp"
                        android:paddingEnd="@dimen/twenty_dp"
                        android:visibility="visible"
                        tools:listitem="@layout/item_fault_adapter" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_log_another_fault"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/seventy_five_dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/twenty_dp"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:layout_marginEnd="@dimen/twenty_dp"
                        android:backgroundTint="@color/bjs"
                        android:gravity="center"
                        android:padding="@dimen/twelve_dp"
                        android:text="@string/log_another_fault"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/eighteen_sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        app:fontFamily="@font/amiko"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/white"
                        app:shapeAppearanceOverlay="@style/buttonShape" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_continue"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/seventy_five_dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/twenty_dp"
                        android:backgroundTint="@color/green"
                        android:gravity="center"
                        android:padding="@dimen/twelve_dp"
                        android:text="@string/continue_text"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/eighteen_sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        app:fontFamily="@font/amiko"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/white"
                        app:shapeAppearanceOverlay="@style/buttonShape" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_faults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/twenty_dp"
                android:paddingEnd="@dimen/twenty_dp"
                android:paddingBottom="@dimen/twenty_dp"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_fault_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/twenty_sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/amiko" />

                    <ImageView
                        android:id="@+id/iv_close"
                        android:layout_width="@dimen/thirty_five_dp"
                        android:layout_height="@dimen/thirty_five_dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_close" />

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_add_fault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_fault_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:gravity="start"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sixteen_sp"
                        app:fontFamily="@font/amiko" />


                    <Spinner
                        android:id="@+id/spn_fault_component"
                        style="@style/SpinnerTheme"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty_five_dp"
                        android:layout_marginTop="@dimen/thirty_dp"
                        android:popupBackground="@drawable/spinner_background_popup"
                        android:spinnerMode="dropdown" />


                    <EditText
                        android:id="@+id/et_fault_additional_notes"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="@dimen/twenty_dp"
                        android:background="@drawable/background_rounded_corner"
                        android:gravity="start"
                        android:hint="@string/additional_notes"
                        android:padding="@dimen/fifteen_dp"
                        android:textColorHint="@color/semi_gray"
                        android:visibility="visible" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_log_fault"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/seventy_five_dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/twenty_dp"
                        android:backgroundTint="@color/bjs"
                        android:gravity="center"
                        android:padding="@dimen/twelve_dp"
                        android:text="@string/add_fault"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/eighteen_sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/amiko"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/white"
                        app:shapeAppearanceOverlay="@style/buttonShape" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_logged_fault"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:visibility="gone">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#E8E8E8"
                        app:cardCornerRadius="@dimen/ten_dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:id="@+id/rl_title"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/sixty_five_dp">

                                <ImageView
                                    android:id="@+id/iv_wrench"
                                    android:layout_width="@dimen/forty_dp"
                                    android:layout_height="@dimen/forty_dp"
                                    android:layout_centerVertical="true"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_wrench"
                                    app:tint="@color/black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_toEndOf="@+id/iv_wrench"
                                    android:fontFamily="@font/amiko"
                                    android:gravity="center_vertical"
                                    android:text="@string/fault_logged"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rl_less_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_title"
                                android:padding="15dp">


                                <TextView
                                    android:id="@+id/tv_fault_logged_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/amiko"
                                    android:gravity="center_vertical"
                                    android:text="@string/fault"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_fault_logged"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_fault_logged_text"
                                    android:layout_marginTop="@dimen/five_dp"
                                    android:fontFamily="@font/amiko"
                                    android:gravity="center_vertical"
                                    android:textSize="16sp" />


                                <TextView
                                    android:id="@+id/tv_additional_notes_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_fault_logged"
                                    android:layout_marginTop="@dimen/twenty_dp"
                                    android:fontFamily="@font/amiko"
                                    android:gravity="center_vertical"
                                    android:text="@string/additional_note"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_additional_notes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_additional_notes_text"
                                    android:layout_marginTop="@dimen/five_dp"
                                    android:fontFamily="@font/amiko"
                                    android:gravity="center_vertical"
                                    android:textSize="16sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/seventy_dp"
                                    android:layout_below="@+id/tv_additional_notes"
                                    android:layout_marginTop="@dimen/ten_dp"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/btn_delete"
                                        android:layout_width="150dp"
                                        android:layout_height="match_parent"
                                        android:backgroundTint="@color/red"
                                        android:gravity="center"
                                        android:paddingStart="@dimen/twenty_dp"
                                        android:paddingEnd="@dimen/twenty_dp"
                                        android:text="@string/delete"
                                        android:textAllCaps="true"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        app:fontFamily="@font/amiko"
                                        app:iconGravity="textEnd"
                                        app:iconTint="@color/white"
                                        app:shapeAppearanceOverlay="@style/buttonShape" />

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/btn_edit"
                                        android:layout_width="150dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="@dimen/twenty_dp"
                                        android:backgroundTint="@color/login_back_strap"
                                        android:gravity="center"
                                        android:paddingStart="@dimen/twenty_dp"
                                        android:paddingEnd="@dimen/twenty_dp"
                                        android:text="@string/edit"
                                        android:textAllCaps="true"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        app:fontFamily="@font/amiko"
                                        app:iconGravity="textEnd"
                                        app:iconTint="@color/white"
                                        app:shapeAppearanceOverlay="@style/buttonShape" />

                                </LinearLayout>


                            </RelativeLayout>


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_done"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/seventy_five_dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/twenty_dp"
                        android:backgroundTint="@color/green"
                        android:gravity="center"
                        android:padding="@dimen/twelve_dp"
                        android:text="@string/continue_text"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/eighteen_sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/amiko"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/white"
                        app:shapeAppearanceOverlay="@style/buttonShape" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>