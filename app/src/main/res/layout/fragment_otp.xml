<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:src="@drawable/bjssmall" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thirty_dp"
            android:padding="@dimen/fifteen_dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/black" />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:background="@color/login_back_strap"
        android:gravity="center"
        android:text="@string/reset_pin"
        android:textColor="@color/white"
        android:textSize="@dimen/twenty_sp"
        android:textStyle="bold"
        app:fontFamily="@font/amiko" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.66"
        android:orientation="vertical"
        android:paddingStart="@dimen/twenty_dp"
        android:paddingTop="@dimen/thirty_dp"
        android:paddingEnd="@dimen/twenty_dp">

        <TextView
            android:id="@+id/tv_phone_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_dp"
            android:gravity="center"
            android:text="@string/verification_code_text"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen_sp"
            app:fontFamily="@font/amiko" />


        <com.bjs.pdanative.presentation.ui.otpview.OtpView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fifty_five_dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/forty_dp"
            android:imeOptions="actionDone"
            android:inputType="numberPassword"
            android:maxLines="1"
            android:orientation="horizontal"
            android:textSize="@dimen/fourteen_sp"
            app:fontFamily="@font/amiko"
            app:itemRadius="@dimen/five_dp"
            app:itemSpacing="@dimen/thirty_dp"
            app:lineColor="@color/semi_gray" />


        <TextView
            android:id="@+id/tv_resend_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/forty_dp"
            android:gravity="center"
            android:padding="@dimen/five_dp"
            android:text="@string/resend"
            android:textSize="@dimen/eighteen_sp"
            app:fontFamily="@font/amiko" />

    </LinearLayout>

</LinearLayout>

