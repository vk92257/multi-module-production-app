<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/ten_dp"
    android:layout_marginEnd="@dimen/ten_dp"
    android:orientation="vertical"
    android:padding="@dimen/eight_dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="@dimen/seventy_five_dp"
        android:layout_height="@dimen/seventy_five_dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/ten_dp"
        android:foreground="@drawable/bottom_menu_ripple"
        app:cardCornerRadius="@dimen/forty_dp"
        app:cardElevation="@dimen/seven_dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_app"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:focusable="true"
            android:foreground="@drawable/bottom_menu_ripple"
            app:civ_border_color="@color/white"
            app:civ_border_width="@dimen/six_dp" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="16sp" />


</LinearLayout>
