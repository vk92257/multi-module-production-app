<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten_dp"
    app:cardBackgroundColor="#E8E8E8"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/forty_dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ic_wrench"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/iv_close"
                android:fontFamily="@font/amiko"
                android:gravity="center_vertical"
                android:text="@string/fault_logged"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@color/black" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/amiko"
                    android:gravity="center_vertical"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:text="1"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_less_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_title"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_faulty_component_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amiko"
                android:gravity="center_vertical"
                android:text="@string/faulty_component"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_faulty_component"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_faulty_component_text"
                android:layout_marginTop="@dimen/five_dp"
                android:fontFamily="@font/amiko"
                android:gravity="center_vertical"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_fault_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_faulty_component"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/amiko"
                android:gravity="center_vertical"
                android:text="@string/fault"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_fault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_fault_text"
                android:layout_marginTop="@dimen/five_dp"
                android:fontFamily="@font/amiko"
                android:gravity="center_vertical"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_priority_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_fault"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/amiko"
                android:gravity="center_vertical"
                android:text="@string/priority"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_priority_text"
                android:layout_marginTop="@dimen/five_dp"
                android:fontFamily="@font/amiko"
                android:gravity="center_vertical"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_additional_notes_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_priority"
                android:layout_marginTop="@dimen/twenty_dp"
                android:fontFamily="@font/amiko"
                android:gravity="center_vertical"
                android:text="@string/additional_note"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_additional_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_additional_notes_text"
                android:layout_marginTop="@dimen/five_dp"
                android:fontFamily="@font/amiko"
                android:gravity="center_vertical"
                android:textSize="16sp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_fault_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_additional_notes"
                android:layout_marginTop="@dimen/ten_dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/seventy_dp"
                android:layout_below="@+id/rv_fault_image"
                android:layout_marginTop="@dimen/ten_dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_delete"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/red"
                    android:gravity="center"
                    android:paddingStart="@dimen/twenty_dp"
                    android:paddingEnd="@dimen/twenty_dp"
                    android:text="@string/delete"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/amiko"
                    app:iconGravity="textEnd"
                    app:iconTint="@color/white"
                    app:shapeAppearanceOverlay="@style/buttonShape" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_edit"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/twenty_dp"
                    android:backgroundTint="@color/login_back_strap"
                    android:gravity="center"
                    android:paddingStart="@dimen/twenty_dp"
                    android:paddingEnd="@dimen/twenty_dp"
                    android:text="@string/edit"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/amiko"
                    app:iconGravity="textEnd"
                    app:iconTint="@color/white"
                    app:shapeAppearanceOverlay="@style/buttonShape" />

            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>