<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nested_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="#EBE8E3"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_base"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_base" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dp"
                android:fontFamily="@font/amiko"
                android:text="@string/return_to_base"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/twenty_dp"
            android:fontFamily="@font/amiko"
            android:text="@string/odometer_reading"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen_sp"
            android:textStyle="bold" />


        <EditText
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/fifteen_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginEnd="@dimen/fifteen_dp"
            android:background="@drawable/background_rounded_corner"
            android:gravity="center"
            android:padding="@dimen/fifteen_dp"
            android:textColorHint="@color/semi_gray"
            android:visibility="visible" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/thirty_dp"
            android:fontFamily="@font/amiko"
            android:text="@string/vehicle_walk_text"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen_sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/five_dp"
            android:fontFamily="@font/amiko"
            android:text="(0/5 photos added)"
            android:textSize="@dimen/fourteen_sp"
            android:textStyle="italic" />


        <RelativeLayout
            android:id="@+id/rl_add"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/twenty_dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_camera"
                android:transitionName="loginFab"
                app:backgroundTint="@color/bjs"
                app:fabCustomSize="70dp"
                app:tint="@color/white" />

            <ImageView
                android:layout_width="@dimen/eighteen_dp"
                android:layout_height="@dimen/eighteen_dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/eighteen_dp"
                android:elevation="@dimen/ten_dp"
                android:src="@drawable/ic_add"
                app:tint="@color/white" />


        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_thumbnails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginEnd="@dimen/twenty_dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_marginEnd="@dimen/twenty_dp"
            android:fontFamily="@font/amiko"
            android:text="@string/site_parked"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen_sp"
            android:textStyle="bold" />

        <Spinner
            style="@style/SpinnerTheme"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_five_dp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginEnd="@dimen/twenty_dp"
            android:popupBackground="@drawable/spinner_background_popup"
            android:spinnerMode="dropdown"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_marginEnd="@dimen/twenty_dp"
            android:fontFamily="@font/amiko"
            android:text="What bay is your van parked in?"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen_sp"
            android:textStyle="bold" />

        <Spinner
            style="@style/SpinnerTheme"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_five_dp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginEnd="@dimen/twenty_dp"
            android:popupBackground="@drawable/spinner_background_popup"
            android:spinnerMode="dropdown"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred_dp"
            android:layout_marginTop="@dimen/thirty_dp"
            android:background="#EBE8E3"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/chk_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/twenty_five_dp"
                android:layout_marginEnd="@dimen/twenty_dp"
                android:backgroundTint="@color/semi_gray"
                android:buttonTint="#999187"
                android:paddingStart="@dimen/five_dp"
                android:paddingEnd="@dimen/five_dp"
                android:text="@string/check_return_base"
                android:textColor="#999187"
                android:textSize="@dimen/fourteen_sp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_validate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/seventy_dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_marginEnd="@dimen/twenty_dp"
            android:backgroundTint="@color/bjs"
            android:gravity="center"
            android:text="@string/done"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/eighteen_sp"
            android:textStyle="bold"
            app:fontFamily="@font/amiko"
            app:iconGravity="textEnd"
            app:iconTint="@color/white"
            app:shapeAppearanceOverlay="@style/buttonShape" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/seventy_dp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginEnd="@dimen/twenty_dp"
            android:layout_marginBottom="@dimen/twenty_dp"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="@string/cancel"
            android:textAllCaps="true"
            android:textColor="#A39A91"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/amiko"
            app:shapeAppearanceOverlay="@style/buttonShape"
            app:strokeColor="#A39A91"
            app:strokeWidth="@dimen/two_dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>