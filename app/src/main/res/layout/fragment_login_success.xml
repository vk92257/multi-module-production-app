<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/twenty_dp"
    android:paddingEnd="@dimen/twenty_dp">


    <ImageView
        android:id="@+id/iv_success"
        android:layout_width="@dimen/hundred_dp"
        android:layout_height="@dimen/hundred_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/eighty_dp"
        android:src="@drawable/ic_tick"
        app:tint="@color/green" />

    <TextView
        android:id="@+id/tv_verified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/thirty_dp"
        android:text="@string/login_successful"
        android:textAllCaps="true"
        android:textColor="@color/green"
        android:textSize="@dimen/eighteen_sp"
        android:textStyle="bold"
        app:fontFamily="@font/amiko" />

    <RelativeLayout
        android:id="@+id/rl_profile"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/tv_verified"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/hundred_dp"
            android:layout_height="@dimen/hundred_dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginBottom="@dimen/forty_dp"
            android:src="@color/login_back_strap" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="@dimen/fifty_dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/fifty_dp"
            android:layout_marginEnd="@dimen/thirty_dp"
            android:src="@color/bjs" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_profilePic"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:civ_border_color="@color/black"
            app:civ_border_width="0.8dp"
            android:layout_centerInParent="true"
            android:src="@drawable/user" />


    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seventy_dp"
        android:layout_below="@+id/rl_profile"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/thirty_dp"
        android:backgroundTint="@color/bjs"
        android:gravity="center"
        android:text="@string/done"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/eighteen_sp"
        android:textStyle="bold"
        app:fontFamily="@font/amiko"
        app:iconGravity="textEnd"
        app:iconTint="@color/white"
        app:shapeAppearanceOverlay="@style/buttonShape" />


</RelativeLayout>