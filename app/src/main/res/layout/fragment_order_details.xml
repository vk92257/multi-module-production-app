<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_back_strap"
        android:orientation="vertical">


        <include layout="@layout/order_info_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixty_five_dp"
            android:background="@drawable/orders_rounded_corner_light_yellow"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:src="@drawable/ic_call"
                app:tint="@color/dark_yellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/ten_dp"
                android:fontFamily="@font/amiko"
                android:gravity="center"
                android:text="Customer pre-call required:"
                android:textColor="@color/dark_yellow"
                android:textSize="@dimen/fourteen_sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/five_dp"
                android:fontFamily="@font/amiko"
                android:gravity="center"
                android:text="07:14"
                android:textColor="@color/dark_yellow"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/five_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/fifteen_dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amiko"
                        android:gravity="center"
                        android:text="Barbara Avila"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sixteen_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/amiko"
                        android:gravity="center"
                        android:text="Julian Bowen"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sixteen_sp"
                        android:textStyle="bold" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/amiko"
                        android:gravity="center"
                        android:text="/// lonely.proof.known"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sixteen_sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@color/delivery_type_color"
                        android:fontFamily="@font/amiko"
                        android:gravity="center"
                        android:padding="@dimen/ten_dp"
                        android:text="DELIVERY"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fourteen_sp"
                        android:textStyle="bold" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_dp"
                    android:layout_marginTop="@dimen/fifteen_dp"
                    android:gravity="center_vertical">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/twenty_five_dp"
                            android:layout_height="@dimen/twenty_five_dp"
                            android:src="@drawable/ic_mobile"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/five_dp"
                            android:gravity="center"
                            android:text="@string/text_mobile"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sixteen_sp"
                            app:fontFamily="@font/amiko" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/twenty_five_dp"
                            android:layout_height="@dimen/twenty_five_dp"
                            android:src="@drawable/ic_home"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/five_dp"
                            android:gravity="center"
                            android:text="@string/text_home"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sixteen_sp"
                            app:fontFamily="@font/amiko" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/seventy_dp"
            android:background="@color/green"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/twenty_two_dp"
                android:layout_height="@dimen/twenty_two_dp"
                android:src="@drawable/ic_call"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/fifteen_dp"
                android:fontFamily="@font/amiko"
                android:gravity="center"
                android:text="PRE-CALL CUSTOMER"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty_sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:layout_marginStart="@dimen/twenty_dp"
                android:src="@drawable/ic_forward"
                app:tint="@color/white" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/seventy_dp"
            android:background="#E4E2DE"
            android:gravity="center_vertical"
            android:padding="@dimen/fifteen_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/amiko"
                android:gravity="center"
                android:text="(Swipe to view all products in the order)"
                android:textSize="@dimen/sixteen_sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/amiko"
                android:gravity="center"
                android:text="1/1"
                android:textSize="@dimen/eighteen_sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#E4E2DE"
            android:padding="@dimen/fifteen_dp">

            <!--   <androidx.viewpager.widget.ViewPager
                   android:id="@+id/viewPager"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />-->

            <include layout="@layout/item_products" />


        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/ten_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fifteen_dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@font/amiko"
                        android:gravity="start"
                        android:text="@string/service_type"
                        android:textAllCaps="true"
                        android:textColor="@color/delivery_type_color"
                        android:textSize="@dimen/fourteen_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/fifteen_dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/amiko"
                        android:gravity="start"
                        android:text="@string/service_level"
                        android:textAllCaps="true"
                        android:textColor="@color/delivery_type_color"
                        android:textSize="@dimen/fourteen_sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/sixty_dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="#F3F1F0"
                        android:fontFamily="@font/amiko"
                        android:gravity="center_vertical"
                        android:padding="@dimen/ten_dp"
                        android:text="@string/standard"
                        android:textColor="@color/delivery_type_color"
                        android:textSize="@dimen/eighteen_sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/sixty_dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/fifteen_dp"
                        android:layout_weight="1"
                        android:background="#F3F1F0"
                        android:fontFamily="@font/amiko"
                        android:gravity="center_vertical"
                        android:padding="@dimen/ten_dp"
                        android:text="@string/two_man"
                        android:textColor="@color/delivery_type_color"
                        android:textSize="@dimen/eighteen_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@font/amiko"
                        android:gravity="start"
                        android:text="@string/delivery_point"
                        android:textAllCaps="true"
                        android:textColor="@color/delivery_type_color"
                        android:textSize="@dimen/fourteen_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/fifteen_dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/amiko"
                        android:gravity="start"
                        android:text="@string/items_unpacked"
                        android:textAllCaps="true"
                        android:textColor="@color/delivery_type_color"
                        android:textSize="@dimen/fourteen_sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/sixty_dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="#F3F1F0"
                        android:fontFamily="@font/amiko"
                        android:gravity="center_vertical"
                        android:padding="@dimen/ten_dp"
                        android:text="@string/room_of_choice"
                        android:textColor="@color/delivery_type_color"
                        android:textSize="@dimen/eighteen_sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/sixty_dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/fifteen_dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_included"
                        android:drawablePadding="@dimen/fifteen_dp"
                        android:fontFamily="@font/amiko"
                        android:gravity="center"
                        android:padding="@dimen/ten_dp"
                        android:text="@string/included"
                        android:textColor="@color/white"
                        android:textSize="@dimen/eighteen_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@font/amiko"
                        android:gravity="start"
                        android:text="@string/packaging_removed"
                        android:textAllCaps="true"
                        android:textColor="@color/delivery_type_color"
                        android:textSize="@dimen/fourteen_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/fifteen_dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/amiko"
                        android:gravity="start"
                        android:text="@string/assembly"
                        android:textAllCaps="true"
                        android:textColor="@color/delivery_type_color"
                        android:textSize="@dimen/fourteen_sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/sixty_dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/background_included"
                        android:drawablePadding="@dimen/fifteen_dp"
                        android:fontFamily="@font/amiko"
                        android:gravity="center"
                        android:padding="@dimen/ten_dp"
                        android:text="@string/included"
                        android:textColor="@color/white"
                        android:textSize="@dimen/eighteen_sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/sixty_dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/fifteen_dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_not_included"
                        android:drawablePadding="@dimen/fifteen_dp"
                        android:fontFamily="@font/amiko"
                        android:gravity="center"
                        android:padding="@dimen/ten_dp"
                        android:text="@string/not_included"
                        android:textColor="@color/white"
                        android:textSize="@dimen/eighteen_sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@font/amiko"
                        android:gravity="start"
                        android:text="@string/disassembly"
                        android:textAllCaps="true"
                        android:textColor="@color/delivery_type_color"
                        android:textSize="@dimen/fourteen_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/fifteen_dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/amiko"
                        android:gravity="start"
                        android:text="@string/collect_disposal"
                        android:textAllCaps="true"
                        android:textColor="@color/delivery_type_color"
                        android:textSize="@dimen/fourteen_sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/sixty_dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/background_not_included"
                        android:drawablePadding="@dimen/fifteen_dp"
                        android:fontFamily="@font/amiko"
                        android:gravity="center"
                        android:padding="@dimen/ten_dp"
                        android:text="@string/not_included"
                        android:textColor="@color/white"
                        android:textSize="@dimen/eighteen_sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/sixty_dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/fifteen_dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_not_included"
                        android:drawablePadding="@dimen/fifteen_dp"
                        android:fontFamily="@font/amiko"
                        android:gravity="center"
                        android:padding="@dimen/ten_dp"
                        android:text="@string/not_included"
                        android:textColor="@color/white"
                        android:textSize="@dimen/eighteen_sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/seventy_dp"
            android:layout_gravity="center"
            android:background="@color/login_back_strap"
            android:fontFamily="@font/amiko"
            android:gravity="center"
            android:text="@string/getting_customer"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_sp"
            android:textStyle="bold" />


        <fragment
            android:id="@+id/map"
            class="com.bjs.pdanative.presentation.ui.runsheet.ScrollMapFragment"
            android:layout_width="match_parent"
            android:layout_height="400dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/seventy_dp"
            android:layout_gravity="center"
            android:background="@color/red"
            android:fontFamily="@font/amiko"
            android:gravity="center"
            android:text="/// lonely.proof.known"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred_dp"
            android:background="@color/rating_red_background"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/amiko"
                android:gravity="center"
                android:text="@string/last_visit"
                android:textColor="@color/red"
                android:textSize="@dimen/twenty_sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/rBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_dp"
                android:backgroundTint="@color/red"
                android:numStars="5"
                android:rating="2"
                android:stepSize="0.5"
                android:theme="@style/Widget.AppCompat.RatingBar" />


        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>