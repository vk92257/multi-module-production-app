<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_app_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_dp"
        android:background="#EAE8E7"
        android:paddingStart="@dimen/thirty_dp"
        android:paddingEnd="@dimen/thirty_dp">

        <View
            android:id="@+id/indicator_one"
            android:layout_width="@dimen/fifteen_dp"
            android:layout_height="@dimen/fifteen_dp"
            android:layout_centerVertical="true"
            android:background="@drawable/background_indicator_selected_corner" />

        <View
            android:id="@+id/indicator_two"
            android:layout_width="@dimen/fifteen_dp"
            android:layout_height="@dimen/fifteen_dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/five_dp"
            android:layout_toEndOf="@+id/indicator_one"
            android:background="@drawable/background_indicator_unselected_corner" />

        <TextView
            android:id="@+id/tv_app_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/semi_gray"
            android:textSize="@dimen/sixteen_sp"
            android:textStyle="bold"
            app:fontFamily="@font/amiko" />

    </RelativeLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible" />

</LinearLayout>