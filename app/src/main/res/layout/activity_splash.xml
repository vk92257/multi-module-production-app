<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bjs"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/twenty_dp">

    <ImageView
        android:id="@+id/iv_splash_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_logo" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pre_route"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seventy_dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/ten_dp"
        android:backgroundTint="@color/login_back_strap"
        android:gravity="center"
        android:padding="@dimen/twelve_dp"
        android:text="@string/allow_permissions"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/eighteen_sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:fontFamily="@font/amiko"
        app:iconGravity="textEnd"
        app:iconTint="@color/white"
        app:shapeAppearanceOverlay="@style/buttonShape" />


</LinearLayout>
