<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="NestedWeights">


    <include
        android:id="@+id/header_layout"
        layout="@layout/item_login_header_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@color/login_back_strap"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:background="@color/login_back_strap"
            android:gravity="center"
            android:paddingStart="@dimen/ten_dp"
            android:text="@string/lgv_check"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:fontFamily="@font/amiko" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_lgv_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.65"
            android:paddingEnd="@dimen/ten_dp"
            android:visibility="visible"
            tools:listitem="@layout/item_lgv_check" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.1"
                android:fontFamily="@font/amiko"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:text="@string/summary"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_fault_status"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:paddingStart="@dimen/twenty_dp"
                android:paddingEnd="@dimen/twenty_dp"
                tools:listitem="@layout/item_lgv_check_summary" />


            <LinearLayout
                android:id="@+id/ll_yes_no"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_photo_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/amiko"
                    android:gravity="center"
                    android:text="@string/info_correct_text"
                    android:textSize="@dimen/sixteen_sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_no"
                        android:layout_width="0dp"
                        android:layout_height="75dp"
                        android:layout_marginStart="-100dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/red"
                        android:gravity="end|center_vertical"
                        android:paddingEnd="50dp"
                        android:text="@string/no"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/amiko"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/white"
                        app:shapeAppearanceOverlay="@style/buttonShape" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_yes"
                        android:layout_width="0dp"
                        android:layout_height="75dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="-100dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/green"
                        android:gravity="center|start"
                        android:paddingStart="50dp"
                        android:text="@string/yes"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/amiko"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/white"
                        app:shapeAppearanceOverlay="@style/buttonShape" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginBottom="@dimen/fifty_dp"
            android:contentDescription="@string/no"
            android:src="@drawable/ic_arrow_back"
            android:transitionName="loginFab"
            app:backgroundTint="@color/login_back_strap"
            app:fabCustomSize="@dimen/eighty_dp"
            app:tint="@color/white" />


    </RelativeLayout>

</LinearLayout>